@model IEnumerable<Mvc5.CafeT.vn.Models.CompanyModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Introduction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountViews)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastViewAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastViewBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Website)
        </td>
        <td>
            @Html.Raw(item.Introduction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountViews)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastViewAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastViewBy)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @if (User.Identity.IsAuthenticated && User.Identity.Name == item.CreatedBy)
            {
                @Html.ActionLink("Edit", "Edit", "CompanyModels", new { id = item.Id }, null)
                @Html.Raw(" | ")
                @Html.ActionLink("Delete", "Delete", "CompanyModels", new { id = item.Id }, null)
            }
            
        </td>
    </tr>
}

</table>
