@using Mvc5.CafeT.vn.Models;
@model Mvc5.CafeT.vn.Models.QuestionModel

<h4>@Html.Raw(Model.Title)</h4>
<span>
    @Html.Raw("Created by:" + Model.CreatedBy)
    @Html.Raw(" on ")
    @Html.Raw(Model.CreatedDate.ToShortDateString())
    @if (!Model.UpdatedBy.IsNullOrEmptyOrWhiteSpace())
    {
        @Html.Raw(Model.UpdatedBy)
        @Html.Raw(" on ")

    }
    @if (Model.UpdatedDate != null && Model.UpdatedDate.HasValue)
    {
        @Html.Raw(Model.UpdatedDate.Value.ToShortDateString())
    }
    <br />
    @if (ViewBag.Article != null)
    {
        @Html.Partial("_ArticleTitle", (ArticleModel)ViewBag.Article)
    }
</span>
<hr />
<p>
    @Html.Raw(Model.Content)
</p>

