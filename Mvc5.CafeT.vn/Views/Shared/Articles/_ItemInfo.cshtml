@model Mvc5.CafeT.vn.ModelViews.ArticleView

<div class="label">
    @if (Model.Category != null)
    {
        <span>
            <a href="javascript:void(0);"><i class="fa fa-clock-o"></i> @Model.Category.Name</a>
        </span>
    }
    <span id="#by-authors-box-@Model.Id.ToString()">@Model.Author.GetFullName()</span>
    <span>
        <a href="javascript:void(0);">
            <i class="fa fa-clock-o"></i> 
            @Model.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")
        </a>
    </span>
    <small class="">&#124;</small>
    <span class=""><a href="javascript:void(0);">
        <i class="fa fa-eye"></i> 
        @Model.CountViews</a>
    </span>
</div>
