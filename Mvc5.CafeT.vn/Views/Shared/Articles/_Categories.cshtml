@model IEnumerable<Mvc5.CafeT.vn.Models.ArticleCategory>


<ul class="nav navbar-nav navbar-text">
    <li class="list-item">
        <a href="javascript:void(0);" class="btn btn-primary">Tất cả</a>
    </li>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <li class="list-item">
                @Ajax.ActionLink(item.Name, "GetArticles", "ArticleCategories", new { categoryId = item.Id, page = 0 },
                        new AjaxOptions
                        {
                            UpdateTargetId = "Articles",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "Post"
                        }, 
                        new { @class= "btn btn-primary" })
            </li>
        }
    }
</ul>
