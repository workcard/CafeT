@model Mvc5.CafeT.vn.ModelViews.CommentView

@using (Html.BeginForm("AddComment", "Articles", new { articleId = Model.ArticleId }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ArticleId)    
    @Html.HiddenFor(model => model.ProjectId)
    @Html.HiddenFor(model => model.CourseId)    
    <div class="form-horizontal">
        <h4>Bình luận</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="widget">
            <div class="commentform">
                <form class="row">
                    <div class="col-md-12 col-sm-12">
                        <label>Tiêu đề <span class="required">*</span></label>                        
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })                        
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <label>Nội dung <span class="required">*</span></label>                        
                            @Html.TextArea("Content", new { @id = "Content" })
                            <script>
                                CKEDITOR.replace('Content');
                            </script>
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })                        
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <input type="submit" value="Gửi bình luận" class="btn btn-primary" />
                    </div>
                </form>
            </div><!-- end newsletter -->
        </div><!-- end widget -->        
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
