@model Mvc5.CafeT.vn.ModelViews.CommentView

@Html.Partial("Comments/_ItemHeader", Model)

@if(Model.Article != null)
{
    <span class="glyphicon glyphicon-arrow-right"></span>
    <span>@Html.ActionLink(Model.Article.Title, "Details", "Articles", new { id = Model.ArticleId }, null)</span>
}
<p>
    @Html.Raw(Model.Content.TakeMaxWords(20))
    <hr />
    by: @Model.CreatedBy.GetFromBeginTo("@") on @Model.CreatedDate.TimeAgo()
</p>
<div class="post-bottom">
   @Html.Partial("Comments/_CommentMenu", Model)
</div>
    



