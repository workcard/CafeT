@model Mvc5.CafeT.vn.ModelViews.CommentView

@Html.Partial("Comments/_ItemHeader", Model)
@Html.Partial("Comments/_ItemInfo", Model)
@if (Model.Article != null)
{
    <h6>
        <span class="glyphicon glyphicon-arrow-right"></span>
        <span>
            @Html.ActionLink(Model.Article.Title, "Details", "Articles", new { id = Model.ArticleId }, null)
        </span>
    </h6>
}
<p>
    @Html.Raw(Model.Content.TakeMaxWords(20))
</p>
<div class="post-bottom">
    @Html.Partial("Comments/_CommentMenu", Model)
</div>





