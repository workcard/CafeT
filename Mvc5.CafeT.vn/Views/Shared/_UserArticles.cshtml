
<script type="text/javascript">
        $.get('@Url.Action("CountPublished", "Articles", null )', function (data) {
            $('#Published').html(data);
        });
</script>
<script type="text/javascript">
        $.get('@Url.Action("CountUnPublished", "Articles", null )', function (data) {
            $('#UnPublished').html(data);
        });
</script>
<div class="list-group">
    <ul class="list-group">
        <li class ="list-group-item">
            @Ajax.ActionLink("Articles (Đã xuất bản)", "GetAllPublishedByUser", "Articles", null,
                            new AjaxOptions
                            {
                                UpdateTargetId = "Update",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "Post"
                            }, null)
            <span id="Published" class="badge"></span>
        </li>
        <li class="list-group-item">
            @Ajax.ActionLink("Articles (Chưa xuất bản)", "GetAllUnPublishedByUser", "Articles", null,
                            new AjaxOptions
                            {
                                UpdateTargetId = "Update",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "Post"
                            }, null)
            <span id="UnPublished" class="badge"></span>
        </li>
    </ul>
</div>


