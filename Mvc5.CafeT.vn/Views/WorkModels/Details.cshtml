@using Mvc5.CafeT.vn.Models
@model Mvc5.CafeT.vn.Models.WorkModel

@{
    ViewBag.Title = "Details";
}

<div class="col-md-4">
    @if (ViewBag.Curiculum != null)
    {
        @Html.Partial("_Curiculum", (CuriculumModel)ViewBag.Curiculum)
    }
    
</div>
<div class="col-md-8">
    <h4>@Model.Title</h4>
    <hr />
    <p>
        @Html.Raw(Model.Description)
    </p>
    <span>
        @Html.Raw("Địa điểm: " + Model.Location)
        @Html.Raw("| Lương: " + Model.SalaryOnHour)
        @Html.Raw(Model.CountViews)
        @Html.Raw(Model.LastViewAt)
        @Html.Raw(Model.LastViewBy)
    </span>
    
</div>
<p>
    @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.CreatedBy)
    {
        @Html.ActionLink("Edit", "Edit", "WorkModels", new { id = Model.Id }, null)
        @Html.Raw(" | ")
        @Html.ActionLink("Back to List", "Index")
    }
</p>
