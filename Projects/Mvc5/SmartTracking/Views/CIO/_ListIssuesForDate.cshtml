@model SmartTracking.ViewModels.ListIssuesForDateViewModel


<div class="col-md-6 col-sm-6 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2 style="color: red;">@Model.Date.ToShortDateString()</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table">
                <thead>
                    <tr>
                        <th class=" no-link last">Issue Title </th>
                        <th>Estimation </th>
                        <th>Assigned </th>
                        <th>Status </th>
                        <th>Notify</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Issues)
                    {
                        <tr class="even pointer">
                            <td class=" last"><a target="_blank" href="@Url.Content("~/Issue/IsueDetails/")@item.IssueId">@item.IssueTitle</a></td>
                            <td class=" ">@item.IssueEstimation</td>
                            <td class=" ">@item.AssignedUserName</td>
                            <td class=" ">@item.StatusName</td>
                            <td class="red">@item.Notify</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
