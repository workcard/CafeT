@model SmartTracking.ViewModels.PerfomanceAverageViewModel

<div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
    <div class="tile-stats">
        <div class="icon">
            <i class="fa fa-check-square-o"></i>
        </div>
        <div class="count">@Model.Performance.ToString("0")%</div>
        <h3>Average @Model.Name</h3>
        <h2> (@String.Format("{0:dd/MM/yyyy}", @Model.PhaseName))</h2>
        <p class="red">@Model.Note</p>
    </div>
</div>