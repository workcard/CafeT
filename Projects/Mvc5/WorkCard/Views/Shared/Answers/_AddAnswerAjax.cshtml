@model Web.Models.Answer

<div id="@Model.Id.ToString()">
    @using (Ajax.BeginForm("Create", "Answers", new { questionId = Model.QuestionId },
    new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = Model.Id.ToString(),
        InsertionMode = InsertionMode.Replace
    },
    null))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => Model.Id)
        @Html.HiddenFor(model => Model.QuestionId)
        @Html.HiddenFor(model => Model.CreatedDate)
        <div class="card-box">
            <span class="input-icon icon-right">
                Đáp: <br />
            </span>

            <textarea id="Content" name="Content" rows="1" class="form-control" 
                      placeholder="Post a new message">
            </textarea>
            <div class="p-t-10 pull-right">
                <p>
                    <input type="submit" value="Reply" class="btn btn-default" />
                </p>
            </div>
        </div>
    }
</div>


